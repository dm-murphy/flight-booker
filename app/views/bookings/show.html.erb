<h2>Booking Confirmation</h2>

<% if flash[:alert] %>
      <div id="alert">
         <%= flash[:alert] %> 
      </div>
<% end %>

<p>
<% @booking.passengers.each_with_index do |passenger, index| %>
  <%= "Passenger #{index + 1}:" %>
  <br>
  <%= "Email:" %>
  <%= passenger.email %>
  <br>
  <%= "Name:" %>
  <%= passenger.name %>
  <br>
  <br>
<% end %>
</p>

<p>
  <%= "Flight ID:" %>
  <%= @booking.flight.id %>
  <br>
  <%= "Departing airport code:" %>
  <%= @booking.flight.departing_airport.name %>
  <br>
  <%= "Arriving airport code:" %>
  <%= @booking.flight.arriving_airport.name %>
  <br>
  <%= "Date of flight:" %>
  <%= @booking.flight.takeoff_date_formatted %>
  <br>
  <%= "Takeoff time:" %>
  <%= @booking.flight.takeoff_time_formatted %>
  <br>
  <%= "Flight duration:" %>
  <%= @booking.flight.duration_formatted %>
</p>