<h3> Flights Form</h3>
 
 <%= form_with scope: :search, url: "/flights", method: "get" do %>
    <%= collection_select(
                          :flight,
                          :departing_airport_id, 
                          Airport.all, 
                          :id,
                          :name,
                          {:prompt => 'Select departing airport'}
                          ) %>
    <br>
    <br>
    <%= collection_select(
                          :flight,
                          :arriving_airport_id,
                          Airport.all,
                          :id,
                          :name,
                          {:prompt => 'Select arriving airport'} 
                          ) %>
    <br>
    <br>
    <%= select(
               :flight,
               :passengers,
               [1, 2, 3, 4],
               {:prompt => 'Number of passengers'}
               ) %>
    <br>
    <br>
    <%= collection_select(
                          :flight,
                          :takeoff,
                          Flight.all,
                          :takeoff,
                          :takeoff_date_formatted,
                          
                          {:prompt => 'Date of flight'} 
                          ) %>
    <br>
    <br>
    <%= submit_tag("Search") %>
  <% end %>

  <p>
  <% if @searched_flights %>
    <% @searched_flights.each do |flight| %>
      <%= flight.takeoff %>
      <br>
    <% end %>
  <% end %>
  </p>